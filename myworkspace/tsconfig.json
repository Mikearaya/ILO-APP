{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bionic/ilo-admin/shared-component": [
        "libs/ilo-admin/shared-component/src/index.ts"
      ],
      "@bionic/ilo-admin/shared": ["libs/ilo-admin/shared/src/index.ts"],
      "@bionic/shared-component": ["libs/shared-component/src/index.ts"],
      "@bionic/authorization": ["libs/authorization/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
